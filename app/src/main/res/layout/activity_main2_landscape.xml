            app:layout_constraintTop_toBottomOf="@id/s" />


        <Button
            android:id="@+id/z"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="65dp"
            android:text="Z"
            app:layout_constraintStart_toStartOf="@id/y"
            app:layout_constraintTop_toTopOf="@id/y" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start New Game"
        android:layout_marginLeft="150sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/hintButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HINT"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"
        tools:layout_editor_absoluteX="50dp"
        android:layout_marginTop="5sp"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
         />

    <TextView
        android:id="@+id/hintResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="150sp"
        app:layout_constraintStart_toStartOf="@id/hintButton"
        app:layout_constraintTop_toTopOf="@id/hintButton"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="176dp"
        android:layout_height="178dp"
        app:srcCompat="@drawable/part0"
        tools:layout_editor_absoluteX="473dp"
        tools:layout_editor_absoluteY="48dp"
        android:layout_marginLeft="460sp"
        android:layout_marginBottom="150sp"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintTop_toTopOf="@id/constraintLayout"
        />
